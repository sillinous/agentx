# ==================================
# SYNAPSE CORE - Environment Configuration
# ==================================
# Copy this file to .env and fill in your actual values

# ----------------------------------
# OpenAI Configuration
# ----------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ----------------------------------
# Database Configuration (PostgreSQL + pgvector)
# ----------------------------------
POSTGRES_USER=synapse
POSTGRES_PASSWORD=synapse_dev_password_change_in_production
POSTGRES_DB=synapse
POSTGRES_PORT=5432

# Full database URL (auto-constructed for Docker)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://synapse:synapse_dev_password_change_in_production@localhost:5432/synapse

# ----------------------------------
# Backend Configuration (FastAPI)
# ----------------------------------
BACKEND_PORT=8000
FASTAPI_BASE_URL=http://localhost:8000

# ----------------------------------
# Frontend Configuration (Next.js)
# ----------------------------------
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NODE_ENV=development

# ----------------------------------
# PgAdmin Configuration (Optional - for database management UI)
# ----------------------------------
PGADMIN_EMAIL=admin@synapse.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ----------------------------------
# Security & Authentication
# ----------------------------------
# JWT Secret (generate a secure random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ----------------------------------
# Application Settings
# ----------------------------------
LOG_LEVEL=INFO
DEBUG=true

# ----------------------------------
# Docker Settings
# ----------------------------------
COMPOSE_PROJECT_NAME=synapse
