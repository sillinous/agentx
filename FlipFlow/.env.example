# FlipFlow Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# PHASE 1 - Required for Basic Analyzer
# ============================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-xxx

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# PHASE 2 - Required for Scout Agent
# ============================================

# Database (PostgreSQL/Supabase)
# For local development, use a local PostgreSQL instance
# For CI, this is set automatically to a deterministic test database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/flipflow

# Supabase (alternative to direct PostgreSQL)
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJxxx
SUPABASE_SERVICE_KEY=eyJxxx

# n8n Automation
N8N_WEBHOOK_URL=https://xxx.app.n8n.cloud/webhook/xxx
N8N_API_KEY=xxx

# Email (Resend)
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# PAYMENTS - Required for Monetization
# ============================================

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Product IDs (create these in Stripe Dashboard)
STRIPE_PRICE_STARTER=price_xxx    # $9.99 for 10 analyses
STRIPE_PRICE_UNLIMITED=price_xxx  # $49/mo unlimited
STRIPE_PRICE_SCOUT_STARTER=price_xxx  # $49/mo Scout Starter
STRIPE_PRICE_SCOUT_PRO=price_xxx      # $99/mo Scout Pro
STRIPE_PRICE_SCOUT_ENTERPRISE=price_xxx # $249/mo Scout Enterprise

# ============================================
# OPTIONAL - Enhanced Features
# ============================================

# Scraping (for better reliability)
BRIGHT_DATA_PROXY_URL=xxx
BRIGHT_DATA_USERNAME=xxx
BRIGHT_DATA_PASSWORD=xxx

# Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=xxx
SENTRY_DSN=xxx

# Authentication (if using Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Rate Limiting
UPSTASH_REDIS_REST_URL=xxx
UPSTASH_REDIS_REST_TOKEN=xxx

# Cron & Webhook Security
CRON_SECRET=xxx
WEBHOOK_SECRET=xxx

# ============================================
# INTERNAL - Do Not Modify
# ============================================

# App Settings
MAX_FREE_ANALYSES=3
SCRAPE_INTERVAL_HOURS=6
BATCH_SIZE=50
ALERT_SCORE_THRESHOLD=70
